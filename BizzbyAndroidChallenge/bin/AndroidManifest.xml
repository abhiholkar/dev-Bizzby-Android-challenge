<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bizzbyandroidchallenge.view"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.bizzbyandroidchallenge.view.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.bizzbyandroid.service.DownloadService"
            android:exported="false" >
        </service>

        <activity
            android:name="com.bizzbyandroidchallenge.view.CurrenyCodeListActivity"
            android:label="@string/title_activity_rate_list">
        </activity>
        <activity
            android:name="com.bizzbyandroidchallenge.view.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
    </application>

</manifest>
